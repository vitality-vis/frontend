{
  "compilerOptions": {
    "esModuleInterop": true,          // <-- enables default-style imports from CommonJS modules
    "allowSyntheticDefaultImports": true,  // <-- lets TypeScript compile `import X from "cjs-lib"` even when no default export exists
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "index.d.ts"
  ]
}